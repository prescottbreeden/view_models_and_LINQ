@model Book
 
 <h2>Add a new book</h2>
<form asp-action="NewBook" asp-controller="Book" method="post">
  <label>Book Title</label>
  <input asp-for="Title">
  <br>
  <label>Author</label>
  <input asp-for="Author">
  <br>
  <label>Release Year</label>
  <input asp-for="ReleaseYear">
  <br>
  <button>Add Book</button>
</form>