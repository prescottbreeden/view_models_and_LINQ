@model Dashboard

<h1>Welcome @Model.CurrentUser.FirstName!</h1>
<hr>
<p>Here are Bob's favorite books:</p>
@{
  foreach(Book book in @Model.CurrentUser.FavoriteBooks)
  {
    <p>@book.BookId -- @book.Title -- @book.Author -- @book.ReleaseYear | <a href="/remove/@book.BookId">Remove Book</a></p>
  }
}
<hr>
<p>Here are all available books:</p>
@{
  foreach(Book book in @Model.Library.Books)
  {
    <p>@book.BookId -- @book.Title -- @book.Author -- @book.ReleaseYear | <a href="/add/@book.BookId">Add Book</a></p>
  }
}